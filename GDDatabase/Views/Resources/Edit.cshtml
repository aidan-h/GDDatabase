@model Game_Design_DB.ViewModels.ResourceViewModel

@{
    ViewData["Title"] = "Edit";
}

<form-header subject="Resource" description="Edit @Model.Title" />
<form class="col-md-4" asp-action="Edit">
    <div asp-validation-summary="ModelOnly" class="text-danger" />
    <form-field asp-for="Title" />
    <form-field asp-for="URL" />
    <form-many-field asp-for="Authors" field="SelectedPeople" />
    <form-many-field asp-for="Games" field="SelectedGames" />
    <input type="hidden" asp-for="ID" />
    <submit />
</form>

<a asp-action="Index">Back to List</a>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
